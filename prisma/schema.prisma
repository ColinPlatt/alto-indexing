// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Schema {
  id           String        @id
  schemaData   String
  schema       String
  creator      String
  resolver     String
  index        String
  txid         String
  time         String
  attestations Attestation[]
}

model Attestation {
  id             String  @id
  data           String
  schema         Schema  @relation(fields: [schemaId], references: [id])
  recipient      String
  attester       String
  time           String
  expirationTime String
  revocationTime String
  refUUID        String
  revoked        Boolean
  txid           String
  schemaId       String
}

model ServiceStat {
  name  String @id
  value String
}
